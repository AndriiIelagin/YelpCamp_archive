<% include ../partials/header %>

<div class="container">
    <header class="jumbotron text-center">
        <div class="container">
            <h1><i class="fas fa-globe-americas"></i> Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
            <form class="campground_form mx-auto" action="/campgrounds" method="GET">
                <div class="form-group">
                    <input class="form-control" type="text" name="search" placeholder="Campground search">
                </div>
            </form>
        </div>
    </header>
    
    <div class="row text-center">
        <div class="col-md-12">
            <% if(noMatch !== null) { %>
                <h3><%= noMatch %></h3>
                <p>
                	<form action="/campgrounds" method="GET" class="form-inline">
                		<div class="form-group">
                			<input type="text" name="search" placeholder="Campground search..." class="form-control">
                		</div>
                		<input type="submit" value="Search" class="btn btn-default">
                	</form>
                </p>
             <% } %>
        </div>
    </div>

<div class="row">
    <% campgrounds.forEach(function(campground){ %>
        <div class="col-lg-3 col-md-6 mb-5">
            <div class="card text-center">
                <img class="card-img-top card-image mb-3" src=" <%= campground.image %> ">
                <div class="card-body">
                    <div class="card-title">
                        <h4> <%= campground.name %> </h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        </div>
    <% }); %>
</div>


</div>

<% include ../partials/footer %>

