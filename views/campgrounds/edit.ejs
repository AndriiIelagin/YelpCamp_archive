<% include ../partials/header %>
    <h1 class="text-center">Edit <%= campground.name %></h1>
            <form class="mx-auto campground_form" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                 <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%= campground.description %>">
                </div>
                    <button class="btn btn-primary btn-block">Submit</button>
                    <a class="btn btn-success btn-block" href="/campgrounds">Go Back</a>
            </form> 
<% include ../partials/footer %>